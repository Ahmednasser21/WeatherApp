<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_initial">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ahmed.weather.iti.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" >
        <argument
            android:name="fav"
            app:argType="boolean" />
    </fragment>

    <fragment
        android:id="@+id/nav_favourite"
        android:name="com.ahmed.weather.iti.ui.favourite.FavouriteFragment"
        android:label="@string/favourite"
        tools:layout="@layout/fragment_favourite" >
        <action
            android:id="@+id/action_nav_favourite_to_nav_maps"
            app:destination="@id/nav_maps" />
        <action
            android:id="@+id/action_nav_favourite_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_alarm"
        android:name="com.ahmed.weather.iti.ui.alarm.AlarmFragment"
        android:label="@string/alarms"
        tools:layout="@layout/fragment_alarm" />
    <fragment
        android:id="@+id/nav_initial"
        android:name="com.ahmed.weather.iti.ui.intial.InitialSetupFragment"
        android:label="Initial Fragment"
        tools:layout="@layout/fragment_initial_setup">
        <action
            android:id="@+id/action_nav_initial_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_initial_to_mapsFragment"
            app:destination="@id/nav_maps" />
    </fragment>
    <fragment
        android:id="@+id/nav_maps"
        android:name="com.ahmed.weather.iti.ui.maps.MapsFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_nav_maps_to_nav_home"
            app:destination="@id/nav_home" />
        <argument
            android:name="fragment_name"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_maps_to_nav_favourite"
            app:destination="@id/nav_favourite" />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.ahmed.weather.iti.ui.settings.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>