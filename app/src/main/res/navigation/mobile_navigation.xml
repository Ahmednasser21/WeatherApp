<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_initial">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ahmed.weather.iti.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ahmed.weather.iti.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.ahmed.weather.iti.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_initial"
        android:name="com.ahmed.weather.iti.ui.intial.InitialSetupFragment"
        android:label="Initial Fragment"
        tools:layout="@layout/fragment_initial_setup">
        <action
            android:id="@+id/action_nav_initial_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_initial_to_mapsFragment"
            app:destination="@id/nav_maps" />
    </fragment>
    <fragment
        android:id="@+id/nav_maps"
        android:name="com.ahmed.weather.iti.ui.MapsFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_maps" />
</navigation>